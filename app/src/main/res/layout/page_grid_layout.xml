<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="GridLayout of Images\nPress\n Some animate elevation\n Some ripple effect"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:text="/__ImageView src=image__\"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="@dimen/grid_layout_image_width"
                android:layout_height="@dimen/grid_layout_image_height"
                android:layout_column="0"
                android:layout_row="1"
                android:background="@drawable/ripple_boarderless"
                android:clickable="true"
                android:src="@drawable/image_e"
                android:stateListAnimator="@anim/press" />


            <ImageView
                android:layout_width="@dimen/grid_layout_image_width"
                android:layout_height="@dimen/grid_layout_image_height"
                android:background="@drawable/ripple_boarderless"
                android:clickable="true"
                android:src="@drawable/image_c"
                android:stateListAnimator="@anim/press" />


            <!-- outlineProvider required if no background set -->
            <ImageView
                android:layout_width="@dimen/grid_layout_image_width"
                android:layout_height="@dimen/grid_layout_image_height"
                android:clickable="true"
                android:outlineProvider="bounds"
                android:src="@drawable/image_c"
                android:stateListAnimator="@anim/press" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_row="2"
                android:paddingTop="10dp"
                android:text="/__ImageView background=image__\"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="@dimen/grid_layout_image_width"
                android:layout_height="@dimen/grid_layout_image_height"
                android:layout_column="0"
                android:layout_row="3"
                android:background="@drawable/image_e"
                android:clickable="true"
                android:src="@drawable/ripple_boarderless"
                android:stateListAnimator="@anim/press" />

            <ImageView
                android:layout_width="@dimen/grid_layout_image_width"
                android:layout_height="@dimen/grid_layout_image_height"
                android:background="@drawable/image_f"
                android:clickable="true"
                android:src="@drawable/ripple_boarderless"
                android:stateListAnimator="@anim/press" />

            <ImageView
                android:layout_width="@dimen/grid_layout_image_width"
                android:layout_height="@dimen/grid_layout_image_height"
                android:background="@drawable/image_f"
                android:clickable="true"
                android:outlineProvider="bounds"
                android:stateListAnimator="@anim/press" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_row="4"
                android:paddingTop="10dp"
                android:text="/__ImageButtons__\"
                android:textSize="16dp" />

            <ImageButton
                android:layout_width="@dimen/grid_layout_image_width"
                android:layout_height="@dimen/grid_layout_image_height"
                android:layout_column="0"
                android:layout_row="5"
                android:clickable="true"
                android:src="@drawable/image_e"
                android:stateListAnimator="@anim/press" />

            <ImageButton
                android:layout_width="@dimen/grid_layout_image_width"
                android:layout_height="@dimen/grid_layout_image_height"
                android:clickable="true"
                android:src="@drawable/image_s"
                android:stateListAnimator="@anim/press" />

            <ImageButton
                android:layout_width="@dimen/grid_layout_image_width"
                android:layout_height="@dimen/grid_layout_image_height"
                android:clickable="true"
                android:src="@drawable/image_s"
                android:stateListAnimator="@anim/press" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_row="6"
                android:paddingTop="10dp"
                android:text="/__TextView__\"
                android:textSize="16dp" />

            <TextView
                android:layout_width="@dimen/grid_layout_image_width"
                android:layout_height="@dimen/grid_layout_image_height"
                android:layout_column="0"
                android:layout_row="7"
                android:background="@drawable/image_e"
                android:clickable="true"
                android:stateListAnimator="@anim/press" />

            <TextView
                android:layout_width="@dimen/grid_layout_image_width"
                android:layout_height="@dimen/grid_layout_image_height"
                android:background="@drawable/image_c"
                android:clickable="true"
                android:stateListAnimator="@anim/press" />

            <TextView
                android:layout_width="@dimen/grid_layout_image_width"
                android:layout_height="@dimen/grid_layout_image_height"
                android:background="@drawable/image_c"
                android:clickable="true"
                android:outlineProvider="bounds"
                android:stateListAnimator="@anim/press" />

        </GridLayout>

    </ScrollView>
</LinearLayout>