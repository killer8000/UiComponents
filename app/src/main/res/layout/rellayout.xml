<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/relAbove"
        android:background="#c0c0c0c0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AboveL"
            android:textSize="60sp"
            android:layout_gravity="center"
            android:gravity="left"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AboveM"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AboveR"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:gravity="right"/>

    </FrameLayout>
    <FrameLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/relBelow"
        android:background="#c0c0c0c0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BelowL"
            android:textSize="60sp"
            android:layout_gravity="center"
            android:gravity="left"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BelowM"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BelowR"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:gravity="right"/>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relOuter"
        android:background="@drawable/squares100_tiles"
        android:layout_below="@id/relAbove"
        android:layout_above="@id/relBelow"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- #########################  -->

    <FrameLayout
        android:id="@+id/relTop"
        android:background="#c0c0c0c0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LeftT"
            android:textSize="60sp"
            android:layout_gravity="center"
            android:gravity="left"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MidT"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RightT"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:gravity="right"/>

    </FrameLayout>

    <FrameLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/relBottom"
        android:background="#c0c0c0c0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LeftB"
            android:textSize="60sp"
            android:layout_gravity="center"
            android:gravity="left"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MidB"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RightB"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:gravity="right"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/relMid"
        android:background="#80c03030"
        android:layout_below="@id/relTop"
        android:layout_above="@id/relBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/image200"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="40sp"
            android:text="Mid-+-Mid"
            android:textColor="#ff0000"
            />

    </FrameLayout>
    </RelativeLayout>

</RelativeLayout>